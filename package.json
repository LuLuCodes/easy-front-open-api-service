{
  "name": "easy-front-open-api-service",
  "version": "3.0.0",
  "description": "基于nestjs的Open API Service框架",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "bootstrap": "pnpm install",
    "prebuild": "rimraf api",
    "build": "rimraf api && nest build && shx cp ./src/.env.production ./api/.env",
    "build:prod": "rimraf api && nest build && shx cp ./src/.env.production ./api/.env",
    "build:pre-release": "rimraf api && nest build && shx cp ./src/.env.pre-release ./api/.env",
    "build:test": "rimraf api && nest build && shx cp ./src/.env.test ./api/.env",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "rimraf api && cross-env NODE_ENV=development nest start --watch",
    "start:debug": "rimraf api && cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "node api/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db": "node db-tools/index.js",
    "cz": "git-cz"
  },
  "dependencies": {
    "@easy-front-core-sdk/alipay": "^1.3.10",
    "@easy-front-core-sdk/kits": "^1.3.10",
    "@easy-front-core-sdk/miniprogram": "^1.3.10",
    "@easy-front-core-sdk/wx": "^1.3.10",
    "@easy-front-core-sdk/wxpay": "^1.3.10",
    "@liaoliaots/nestjs-redis": "^9.0.2",
    "@nestjs/axios": "^0.1.0",
    "@nestjs/bull": "^0.6.1",
    "@nestjs/common": "^9.1.2",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.1.2",
    "@nestjs/microservices": "^9.1.2",
    "@nestjs/platform-express": "^9.1.2",
    "@nestjs/schedule": "^2.1.0",
    "@nestjs/sequelize": "^9.0.0",
    "@nestjs/serve-static": "^3.0.0",
    "@nestjs/swagger": "^6.1.2",
    "ali-oss": "^6.17.1",
    "amqp-connection-manager": "^4.1.6",
    "amqplib": "^0.10.3",
    "body-parser": "^1.20.0",
    "body-parser-xml": "^2.0.3",
    "bull": "^4.9.0",
    "chalk": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "compression": "^1.7.4",
    "connect-redis": "^6.1.3",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.1.1",
    "dayjs": "^1.11.5",
    "dotenv": "^16.0.2",
    "easy-front-core-sdk": "^1.3.10",
    "express": "^4.18.1",
    "express-rate-limit": "^6.6.0",
    "express-session": "^1.17.3",
    "fs-extra": "^10.1.0",
    "helmet": "^6.0.0",
    "ioredis": "^5.2.3",
    "lodash": "^4.17.21",
    "log4js": "^6.6.1",
    "multer": "1.4.5-lts.1",
    "mysql2": "^2.3.3",
    "nestjs-ali-oss": "^1.0.0",
    "redis": "^4.3.1",
    "redlock": "5.0.0-beta.2",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^3.3.0",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.6",
    "sequelize": "6.23.1",
    "sequelize-typescript": "^2.1.3",
    "sequelize-typescript-generator": "^8.4.4",
    "stacktrace-js": "^2.0.2",
    "swagger-ui-express": "^4.5.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@nestjs/cli": "^9.1.3",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.1.2",
    "@types/ali-oss": "^6.16.4",
    "@types/body-parser": "^1.19.2",
    "@types/body-parser-xml": "^2.0.2",
    "@types/bull": "^3.15.9",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/crypto-js": "^4.1.1",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.14",
    "@types/fs-extra": "^9.0.13",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.0.3",
    "@types/lodash": "^4.14.185",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.7.19",
    "@types/request-ip": "^0.0.37",
    "@types/sequelize": "^4.28.14",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.6",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "commitizen": "^4.2.5",
    "commitlint-config-cz": "^0.13.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "sequelize-auto": "^0.8.8",
    "shx": "^0.3.4",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.1",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.3",
    "webpack": "^5.74.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  }
}
